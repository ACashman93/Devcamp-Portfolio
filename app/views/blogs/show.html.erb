<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

  <p>
    <%= @blog.body %>
  </p>

  <% if logged_in?(:site_admin) %>
    <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-outline-success btn-sm" %> 
    <%= link_to 'Destroy', @blog, method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: 'Are you sure?' } %>
  <% end %>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>  
  </div>
  
</div>
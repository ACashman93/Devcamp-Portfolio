<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Andrew Cashman Portfolio", sticky: false, time:1500) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Andrew Cashman Portfolio", sticky: false, time:1500) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Andrew Cashman Portfolio", sticky: false, time:1500) %>
<% end %>